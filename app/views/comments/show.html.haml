- model_class = Comment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @comment.name
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @comment.text

= link_to t('.back', :default => t("helpers.links.back")), recipes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_recipe_comment_path(@comment), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), recipe_comment_path(@comment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'JesteÅ› pewien?')) }, :class => 'btn btn-danger'
