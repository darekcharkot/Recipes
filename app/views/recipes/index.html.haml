- model_class = Recipe
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%div
  - @recipes.each do |recipe|
    %h4= recipe.namerecipe
    %strong= 'Autor przepisu' + ':'
    = recipe.author
    %br
    %strong= 'Kategoria' + ':'
    = recipe.category
    %strong= '| '+'Dodany' + ':'
    = recipe.created_at
    %br
    %br
    %strong= 'Składniki' + ':'
    = recipe.ingredients
    %br
    %br
    %strong= 'Sposób wykonania' + ':'
    %div{:class => "make_recipe"}= recipe.makerecipe
    %br
    %br
      - if current_user
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_recipe_path(recipe), :class => 'btn btn-default btn-xs'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), recipe_path(recipe), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
        = link_to 'Dodaj komentarz', new_recipe_comment_path(recipe), :class => 'btn btn-primary btn-xs'

    %h4 Komentarze
    -if recipe.comments.empty?
      Brak komentarza
    -else
      - recipe.comments.each do |comment|
        = render(partial: "comment", locals:{comment: comment})
    %br
    %hr{ :style => "border-width: 2px; width: 80%; align: left; border-color: orange;" }
  - if current_user
    = link_to t('.new', :default => t("helpers.links.new")), new_recipe_path, :class => 'btn btn-primary'
