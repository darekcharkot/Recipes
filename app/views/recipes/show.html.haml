- model_class = Recipe
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:namerecipe) + ':'
  %br
  = @recipe.namerecipe
%p
  %strong= model_class.human_attribute_name(:author) + ':'
  %br
  = @recipe.author
%p
  %strong= model_class.human_attribute_name(:category) + ':'
  %br
  = @recipe.category
%p
  %strong= model_class.human_attribute_name(:ingredients) + ':'
  %br
%p
  %strong= model_class.human_attribute_name(:makerecipe) + ':'
  %br
  = @recipe.makerecipe
%p

= link_to t('.back', :default => t("helpers.links.back")), recipes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_recipe_path(@recipe), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), recipe_path(@recipe), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'JesteÅ› pewien?')) }, :class => 'btn btn-danger'

  -if @comments.empty?
    Brak komentarza
  -else
    - @comments.each do |comment|
      = render(partial: "comment", locals:{comment: comment})
